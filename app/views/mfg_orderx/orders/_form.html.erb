<% if @view_in_config && @erb_code %>
  <%= render inline: ERB.new(@erb_code).result(binding) %>
  
<% else %>
<%= simple_form_for @order do |f| %>    

  <%= f.input :quote_id_noupdate, :label => t("Quote#"), :readonly => true, :input_html => {:value => @quote.id} %> 
  <%= f.input :customer_name, :label => t('Customer'), :readonly => true, :input_html => {:value => @rfq.customer.name} %>
  <%= f.input :product_info, :label => t("Product Info"), :readonly => true, :input_html => {:value => @rfq.product_name + ' ' + @rfq.drawing_num}  %>
  <%= f.input :unit_price, :label => t("Unit Price"), :readonly => true, :input_html => {:value => @quote.unit_price}%> 
  <%= f.input :product_wt, :label => t("Product WT(g)"), :readonly => true, :input_html => {:value => @rfq.product_wt}%>  
  <%= f.input :order_date, :label => t("Order Date"), :as => :string %> 
  <%= f.input :qty, :label => t("Qty") %> 
  <%= f.input :order_total, :label => t("Order Total"), :readonly => true %> 
  <%= f.input :order_wt, :label => t("Order WT(kg)"), :readonly => true %>
  <%= f.input :order_requirement, :label => t("Order Requirement"), :input_html => {:rows => 4} %> 
  <%= f.input :customer_po, :label => t("PO#") %> 
  <%= f.input :delivery_date, :label => t("Delivery Date"), :as => :string %> 
  <%= f.input :shipping_date, :label => t("Shipping Date"), :as => :string %>   
  <% if readonly?(@order, 'expedite')%>
     <%= f.input :expedite_noupdate, :label => t('Expedite'), :readonly => true, :required => false, :input_html => {:value => @order.expedite} %>
  <% else %>
     <%= f.input :expedite, :label => t('Expedite'), :as => :boolean %>
  <% end %>
  <% if readonly?(@order, 'cancelled')%>
     <%= f.input :cancelled_noupdate, :label => t('Cancelled'), :readonly => true, :required => false, :input_html => {:value => @order.cancelled} %>
  <% else %>
     <%= f.input :cancelled, :label => t('Cancelled'), :as => :boolean %>
  <% end %>
  <% if readonly?(@order, 'sample_required')%>
     <%= f.input :sample_required_noupdate, :label => t('Require Sample?'), :readonly => true, :required => false, :input_html => {:value => @order.sample_required} %>
  <% else %>
     <%= f.input :sample_required, :label => t("Require Sample?"), :as => :boolean %> 
  <% end %>
  <% if readonly?(@order, 'completed')%>
     <%= f.input :completed_noupdate, :label => t('Completed'), :readonly => true, :required => false, :input_html => {:value => @order.completed} %>
  <% else %>
     <%= f.input :completed, :label => t('Completed'), :as => :boolean %>
  <% end %>
  <%#= f.input :executioner_id, :collection => Authentify::UsersHelper::return_users('sales', params[:controller]), :label => t("Executioner"),:label_method => :name, :value_method => :id, :include_blank => true %>
  
  <%= link_to t('Back'), SUBURI + "/authentify/view_handler?index=0", :class => BUTTONS_CLS['action'] %>
  <%= f.button :submit, t('Save') %>  
<% end %>

<% end %>
